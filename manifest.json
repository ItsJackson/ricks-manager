{
    "name": "Rick's Password Manager",
    "description": "A password manager written in JavaScript by Rick Astley.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "webNavigation", "scripting"],
    "host_permissions": [
        "https://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "icons": {
        "128": "icon.png"
    }
}